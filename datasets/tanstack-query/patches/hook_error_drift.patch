+    queryFn: () => fetchUser(userId),
+    cacheTime: 1000 * 60 * 10, // STALE: Should be gcTime in v5
+    // LOGIC DRIFT: No retry configuration
+    // LOGIC DRIFT: No error handling meta
+  });
