+import { useQuery } from '@tanstack/react-query';
+
+export const useUser = () => useQuery({ 
+  queryKey: ['user'], 
+  queryFn: async () => {
+    try {
+      const res = await fetch('/user'); // Drift: Manual fetch instead of baseQuery
+      return res.json();
+    } catch (e) { throw e; }
+  } 
+});
