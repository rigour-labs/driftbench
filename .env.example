# DriftBench Environment Configuration
# Copy this file to .env and fill in your values

# LLM API Keys (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Rigour CLI Configuration
# Path to rigour CLI (leave empty to use global 'rigour' from PATH)
RIGOUR_CLI_PATH=
# Set to "true" if RIGOUR_CLI_PATH points to a Node.js script (e.g., dist/cli.js)
RIGOUR_USE_NODE=false

# Example for local development with rigour source:
# RIGOUR_CLI_PATH=/path/to/rigour/packages/rigour-cli/dist/cli.js
# RIGOUR_USE_NODE=true
